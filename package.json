{
  "name": "mcp-email-server",
  "version": "1.0.0",
  "description": "MCP server for email management with Gmail and IMAP support",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:simple": "npx tsx run-email-server.ts",
    "dev": "npx tsx run-email-server.ts",
    "streaming": "npx tsx bin/run-streaming-email-server.ts",
    "streaming:dev": "npx tsx --watch bin/run-streaming-email-server.ts",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:simple": "node test/simple-test.js",
    "test:imap-timeout": "vitest run test/imap-timeout.test.ts",
    "test:simple-imap": "vitest run test/simple-imap.test.ts",
    "test:fast-server": "npx tsx test/run-email-server-fast.ts",
    "health:check": "npx tsx scripts/monitor-health.ts",
    "test:quick": "npx tsx scripts/quick-test.ts"
  },
  "keywords": [
    "mcp",
    "email",
    "gmail",
    "imap"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.1",
    "@types/imapflow": "^1.0.23",
    "@types/nodemailer": "^6.4.17",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.21.1",
    "fastmcp": "^3.14.0",
    "google-auth-library": "^10.1.0",
    "googleapis": "^128.0.0",
    "imapflow": "^1.0.193",
    "node-imap": "^0.9.5",
    "nodemailer": "^7.0.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.19.1",
    "@types/node-imap": "^0.9.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
